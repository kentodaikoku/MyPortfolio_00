<div class="container">
  <div class="row">
    <div class="col-md-1">
    
    </div>
    <div class="col-md-10 text-center login-title">
      <h1 class="font-weight-bold pt-5">ログイン画面</h1>
      <p class="text-center">※登録したメールアドレスとパスワードを入力してください。</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field pt-3">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-12 form-control" %>
        </div>

        <div class="field pt-3">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-12 form-control" %>
        </div>

        <%# <% if devise_mapping.rememberable? %>
          <%# <div class="field pt-3"> %>
            <%# <%= f.label :保存する %> 
            <%# <%= f.check_box :remember_me %> 
          <%# </div> %>
        <%# <% end %> 

        <div class="actions pt-3 user-session">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
    <div class="col-md-1">
    
    </div>
  </div>
</div>